<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dip"
    android:background="@drawable/menulistview_third_bg"
    android:padding="12dip" >

    <ImageView
        android:id="@+id/imgMenuThird"
        android:layout_width="90dip"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_null"
        android:src="@drawable/nophoto" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="12dip" >

        <TextView
            android:id="@+id/txtMenuThirdTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="1dip"
            android:textColor="@drawable/menulistview_third_title_text_selector"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtMenuThirdContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="5dip"
            android:lines="4"
            android:textColor="@drawable/menulistview_third_content_text_selector"
            android:textIsSelectable="false"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>